# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# Copy this to .env and fill in your actual values
# ==============================================

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production

# Supabase Database Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres
SUPABASE_BUCKET=reports

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth (if needed)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
GEMINI_API_KEY=your-gemini-api-key

# File Upload & Storage Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,txt,docx,xlsx,csv
UPLOAD_FOLDER=uploads
REPORTS_FOLDER=reports

# External Services Settings
SCRAPING_TIMEOUT=30
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Security & CORS
CORS_ORIGINS=["https://your-frontend-domain.com", "https://app-investimate-5o54xtb4rkg7s.azurewebsites.net"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "app-investimate-5o54xtb4rkg7s.azurewebsites.net"]

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true

# Azure App Service (automatically set by Azure)
# WEBSITE_HOSTNAME=app-investimate-5o54xtb4rkg7s.azurewebsites.net
# WEBSITE_SITE_NAME=app-investimate-5o54xtb4rkg7s
